<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:id="@+id/relativeLayout" android:background="@drawable/border" android:padding="5sp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/imageView" android:layout_width="100sp" android:layout_height="100sp" android:layout_margin="10sp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:contentDescription="Icon"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/imageView" android:layout_centerVertical="true">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/textView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5sp"/>
        <RatingBar android:id="@+id/ratingBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5sp" android:numStars="5" android:rating="5" android:stepSize="1" android:layout_below="@+id/textView" style="?android:attr/ratingBarStyleSmall"/>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/green" android:id="@+id/price_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5sp" android:layout_below="@+id/ratingBar"/>
    </RelativeLayout>
</RelativeLayout>
