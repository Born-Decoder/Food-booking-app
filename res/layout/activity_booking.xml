<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/bkstatus" android:layout_width="320sp" android:layout_height="wrap_content" android:layout_marginBottom="150sp" android:text="Your Booking is Successful. Your Code will be shortly available in your Cart." android:layout_centerHorizontal="true"/>
        <Button android:textColor="#ffffff" android:id="@+id/back" android:background="@color/colorAccent" android:layout_width="300sp" android:layout_height="wrap_content" android:text="Back to Home" android:layout_below="@+id/bkstatus" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>
