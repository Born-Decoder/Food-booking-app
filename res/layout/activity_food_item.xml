<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/img_cont" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20sp" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/item_img" android:layout_width="250sp" android:layout_height="250sp" android:layout_marginTop="30sp" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="30sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/food_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20sp" android:layout_marginBottom="5sp" android:layout_below="@+id/item_img" android:layout_centerHorizontal="true"/>
            <RatingBar android:id="@+id/food_reting" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/food_txt" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/nos_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10sp" android:layout_below="@+id/img_cont" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/green" android:id="@+id/fp_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20sp" android:layout_below="@+id/nos_txt" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="20sp" android:textColor="#000000" android:id="@+id/food_desc" android:layout_width="310sp" android:layout_height="wrap_content" android:layout_marginBottom="20sp" android:layout_below="@+id/fp_txt" android:layout_centerHorizontal="true"/>
        <RelativeLayout android:id="@+id/bookmenu" android:layout_width="240sp" android:layout_height="wrap_content" android:layout_marginBottom="40sp" android:layout_below="@+id/food_desc" android:layout_centerHorizontal="true">
            <Button android:textSize="20sp" android:textColor="#ffffff" android:id="@+id/plus_btn" android:background="#10d518" android:layout_width="60sp" android:layout_height="wrap_content" android:text="+"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:id="@+id/order_txt" android:layout_width="100sp" android:layout_height="wrap_content" android:text="0" android:layout_centerInParent="true"/>
            <Button android:textSize="30sp" android:textColor="#ffffff" android:id="@+id/minus_btn" android:background="@color/colorAccent" android:layout_width="60sp" android:layout_height="wrap_content" android:text="-" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <Button android:textColor="#ffffff" android:id="@+id/book_btn" android:background="@color/colorAccent" android:layout_width="300sp" android:layout_height="40sp" android:layout_marginBottom="40sp" android:text="Proceed to Booking" android:layout_below="@+id/bookmenu" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>
