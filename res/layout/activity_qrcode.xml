<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:id="@+id/inst_qr_txt" android:layout_width="320sp" android:layout_height="wrap_content" android:layout_marginTop="50sp" android:text="Please Focus on the QR code below to scan." android:layout_centerHorizontal="true"/>
        <RelativeLayout android:id="@+id/img_rl" android:layout_width="300sp" android:layout_height="300sp" android:layout_marginTop="20sp" android:layout_below="@+id/inst_qr_txt" android:layout_centerHorizontal="true">
            <ProgressBar android:id="@+id/progress_loader" android:layout_width="100sp" android:layout_height="100sp" android:layout_centerInParent="true" style="?android:attr/progressBarStyle"/>
            <ImageView android:id="@+id/qr_img" android:layout_width="300sp" android:layout_height="300sp" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <Button android:textColor="#ffffff" android:id="@+id/qr_load_btn" android:background="@color/colorPrimary" android:layout_width="300sp" android:layout_height="wrap_content" android:layout_marginTop="20sp" android:text="Generate QR Code" android:layout_below="@+id/img_rl" android:layout_centerHorizontal="true"/>
        <RelativeLayout android:id="@+id/rl1" android:layout_width="300sp" android:layout_height="wrap_content" android:layout_marginTop="30sp" android:layout_below="@+id/qr_load_btn" android:layout_centerHorizontal="true">
            <TextView android:textSize="20sp" android:textColor="#000000" android:gravity="center" android:id="@+id/qr_item_text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="30sp" android:text="Item name" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:id="@+id/qr_item_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Food item" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl2" android:layout_width="300sp" android:layout_height="wrap_content" android:layout_marginTop="20sp" android:layout_below="@+id/rl1" android:layout_centerHorizontal="true">
            <TextView android:textSize="20sp" android:textColor="#000000" android:gravity="center" android:id="@+id/qr_nos_text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nos" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:id="@+id/qr_nos_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl3" android:layout_width="300sp" android:layout_height="wrap_content" android:layout_marginTop="20sp" android:layout_below="@+id/rl2" android:layout_centerHorizontal="true">
            <TextView android:textSize="20sp" android:textColor="#000000" android:gravity="center" android:id="@+id/qr_price_text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Unit Price" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/green" android:gravity="center" android:id="@+id/qr_price_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl4" android:layout_width="300sp" android:layout_height="wrap_content" android:layout_marginTop="20sp" android:layout_marginBottom="50sp" android:layout_below="@+id/rl3" android:layout_centerHorizontal="true">
            <TextView android:textSize="20sp" android:textColor="#000000" android:gravity="center" android:id="@+id/qr_amt_text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Amount" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/colorPrimary" android:gravity="center" android:id="@+id/qr_amt_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
